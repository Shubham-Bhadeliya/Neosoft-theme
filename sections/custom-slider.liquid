<!-- sections/hero-slider.liquid -->
{% schema %}
{
  "name": "Hero Slider",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000000"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "background_image",
          "label": "Background Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Adding zing to your vital nutrition"
        },
        {
          "type": "text",
          "id": "subtext",
          "label": "Subtext",
          "default": "Sugar-free • All-natural • Expert-formulated • GMP certified"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Know More"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Slider",
      "blocks": [
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}

{% stylesheet %}
<style>
.hero-slider {
  background-color: {{ section.settings.background_color }};
  color: {{ section.settings.text_color }};
  overflow: hidden;
  position: relative;
}
.slick-hero .hero-slide {
  background-size: cover;
  background-position: center;
  min-height: 85vh;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: 40px 20px;
  position: relative;
}
.hero-slide::before {
  content: "";
  position: absolute;
  top: 0; left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.3);
}
.hero-slide-content {
  position: relative;
  z-index: 2;
  background: rgba(255,255,255,0.8);
  padding: 20px 30px;
  border-radius: 10px;
  max-width: 600px;
}
.hero-slide h2 {
  font-size: 36px;
  margin-bottom: 10px;
  font-weight: bold;
}
.hero-slide p {
  margin-bottom: 20px;
}
.hero-slide .btn {
  background: #ff2e63;
  color: #fff;
  padding: 12px 30px;
  border-radius: 30px;
  text-decoration: none;
  font-weight: 600;
}
.slick-dots li button:before {
  color: #fff;
}
</style>
{% endstylesheet %}

<div class="hero-slider">
  <div class="slick-hero">
    {% for block in section.blocks %}
      <div class="hero-slide" style="background-image: url('{{ block.settings.background_image | img_url: '1800x' }}');">
        <div class="hero-slide-content">
          <h2>{{ block.settings.heading }}</h2>
          <p>{{ block.settings.subtext }}</p>
          {% if block.settings.button_text != blank %}
            <a href="{{ block.settings.button_link }}" class="btn">{{ block.settings.button_text }}</a>
          {% endif %}
        </div>
      </div>
    {% endfor %}
  </div>
</div>

{% javascript %}
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
<script>
  $(document).ready(function(){
    $('.slick-hero').slick({
      autoplay: true,
      autoplaySpeed: 4000,
      arrows: true,
      dots: true,
      fade: false
    });
  });
</script>
{% endjavascript %}

<link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"/>
<link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick-theme.css"/>
