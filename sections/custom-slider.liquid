{% comment %}
  Custom Hero Slider with Swiper and responsive content behavior
{% endcomment %}

<!-- Swiper CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css" />

<section class="custom-hero-slider">
  <div class="swiper hero-swiper">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="swiper-slide">
          <!-- Image -->
          <picture>
            {% if block.settings.mobile_image %}
              <source media="(max-width: 768px)" srcset="{{ block.settings.mobile_image | image_url: width: 900 }}">
            {% endif %}
            <img 
              src="{{ block.settings.desktop_image | image_url: width: 1600 }}"
              alt="{{ block.settings.heading | escape }}"
              class="slide-image"
              loading="lazy">
          </picture>

          <!-- Overlay for Desktop -->
          <div class="slide-overlay show-on-desktop alignment-{{ section.settings.desktop_alignment }}">
            <div class="slide-content">
              {% if section.settings.star_icon %}
                <img src="{{ section.settings.star_icon | img_url: 'small' }}" alt="star icon" class="star-icon" />
              {% endif %}
              <h2>{{ block.settings.heading }}</h2>
              <p>{{ block.settings.subheading }}</p>

              <div class="icon-row">
                {% for i in (1..4) %}
                  {% assign icon = 'icon_' | append: i %}
                  {% assign label = 'label_' | append: i %}
                  {% if block.settings[icon] %}
                    <div class="icon-block">
                      <img src="{{ block.settings[icon] | img_url: 'small' }}" alt="icon" />
                      <span>{{ block.settings[label] }}</span>
                    </div>
                  {% endif %}
                {% endfor %}
              </div>

              {% if block.settings.button_label != blank %}
                <a href="{{ block.settings.button_link }}" class="hero-button">
                  {{ block.settings.button_label }}
                </a>
              {% endif %}

            <div class="scroll-down">
 <span class="play-icon rotate-down">
  <i class="fa-solid fa-play"></i>
</span>

  <p>{{ block.settings.scroll_text }}</p>
</div>

<!-- Font Awesome include (agar pehle nahi hai) -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

            </div>
          </div>

          <!-- Content for Mobile -->
          <div class="slide-content-mobile show-on-mobile">
            {% if section.settings.star_icon %}
              <img src="{{ section.settings.star_icon | img_url: 'small' }}" alt="star icon" class="star-icon" />
            {% endif %}
            <h2>{{ block.settings.heading }}</h2>
            <p>{{ block.settings.subheading }}</p>

            <div class="icon-row">
              {% for i in (1..4) %}
                {% assign icon = 'icon_' | append: i %}
                {% assign label = 'label_' | append: i %}
                {% if block.settings[icon] %}
                  <div class="icon-block">
                    <img src="{{ block.settings[icon] | img_url: 'small' }}" alt="icon" />
                    <span>{{ block.settings[label] }}</span>
                  </div>
                {% endif %}
              {% endfor %}
            </div>

            {% if block.settings.button_label != blank %}
              <a href="{{ block.settings.button_link }}" class="hero-button">
                {{ block.settings.button_label }}
              </a>
            {% endif %}

                     <div class="scroll-down">
 <span class="play-icon rotate-down">
  <i class="fa-solid fa-play"></i>
</span>

  <p>{{ block.settings.scroll_text }}</p>
</div>
          </div>
        </div>
      {% endfor %}
    </div>

    <!-- Swiper Navigation & Pagination -->
    <div class="swiper-pagination"></div>
    <div class="swiper-button-prev"></div>
    <div class="swiper-button-next"></div>
  </div>
</section>

<!-- Swiper JS -->
<script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>
<script>
  document.addEventListener("DOMContentLoaded", function () {
    new Swiper('.hero-swiper', {
      loop: true,
      pagination: {
        el: '.swiper-pagination',
        clickable: true
      },
      navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev'
      }
    });
  });
</script>

<style>

  span.swiper-pagination-bullet.swiper-pagination-bullet-active {
    background: white;
}
.custom-hero-slider {
  position: relative;
  overflow: hidden;
  height: 100vh;
}

      .rotate-down i {
  transform: rotate(90deg); /* right â†’ down */
}

.hero-swiper,
.swiper-wrapper,
.swiper-slide {
  height: 100%;
}

.swiper-slide {
  position: relative;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.slide-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* Overlay for desktop */
.slide-overlay {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 2;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  padding: 0 5%;
  color: white;
}

.slide-content {
  max-width: 700px;
    display: flex;
    flex-direction: column;
    position: absolute;
    top: 10%;
}

.slide-content-mobile {
  display: none;
  padding: 24px 5%;
  background: #fff;
  color: #000;
}

.slide-content-mobile h2,
.slide-content-mobile p,
.slide-content-mobile span {
  color: #000;
}

.icon-row {
  display: flex;
  flex-wrap: wrap;
  gap: 30px;
}

  .slide-content h2 {
    font-size: 45px;
    width: 60%;
    margin-bottom: 12px;
    font-weight:bold;
}

.icon-block {
  display: flex;
  align-items: center;
  gap: 10px;
  width: 110px;
}

.icon-block img {
  width: 28px;
}

.icon-block span {
  font-size: 14px;
  color: black;
  font-weight:400;
}

.star-icon {
  width: 24px;
  margin-bottom: -33px;
}

.hero-button {
  display: inline-block;
  background: #ed184b;
  color: white;
  padding: 6px 20px;
  border-radius: 25px;
  text-decoration: none;
  margin-top: 15px;
  font-weight: 600;
  font-size: 16px;
  width:100%;
  max-width:25%;
  text-align:center;
}

  .slide-content {
    max-width: 700px;
    display: flex;
    flex-direction: column;
    position: absolute;
    top: 10%;
}

.scroll-down {
  margin-top: 20px;
  display: flex;
  gap: 8px;
  align-items: center;
  font-size: 14px;
  color: black;
}

.scroll-down span {
  font-size: 16px;
}

/* Visibility control */
.show-on-desktop {
  display: block;
}
.show-on-mobile {
  display: none;
}

/* Mobile adjustments */
@media (max-width: 768px) {
  .slide-overlay {
    display: none;
  }

  .star-icon {
    width: 24px;
    margin-bottom: 1px;
}
  .slide-content-mobile {
    display: block;
  }

  .custom-hero-slider {
    height: auto;
  }

  .swiper-slide {
    height: auto;
  }
}

/* Alignment classes (optional, based on your schema) */
.alignment-top-left { justify-content: flex-start; align-items: flex-start; text-align: left; }
.alignment-top-center { justify-content: center; align-items: flex-start; text-align: center; }
.alignment-top-right { justify-content: flex-end; align-items: flex-start; text-align: right; }
.alignment-center-left { justify-content: flex-start; align-items: center; text-align: left; }
.alignment-center-center { justify-content: center; align-items: center; text-align: center; }
.alignment-center-right { justify-content: flex-end; align-items: center; text-align: right; }
.alignment-bottom-left { justify-content: flex-start; align-items: flex-end; text-align: left; }
.alignment-bottom-center { justify-content: center; align-items: flex-end; text-align: center; }
.alignment-bottom-right { justify-content: flex-end; align-items: flex-end; text-align: right; }
</style>

{% schema %}
{
  "name": "Custom Hero Swiper Slider",
  "settings": [
    {
      "type": "image_picker",
      "id": "star_icon",
      "label": "Star Icon Before Heading"
    },
    {
      "type": "select",
      "id": "desktop_alignment",
      "label": "Content Alignment (Desktop)",
      "default": "center-center",
      "options": [
        { "value": "top-left", "label": "Top Left" },
        { "value": "top-center", "label": "Top Center" },
        { "value": "top-right", "label": "Top Right" },
        { "value": "center-left", "label": "Center Left" },
        { "value": "center-center", "label": "Center Center" },
        { "value": "center-right", "label": "Center Right" },
        { "value": "bottom-left", "label": "Bottom Left" },
        { "value": "bottom-center", "label": "Bottom Center" },
        { "value": "bottom-right", "label": "Bottom Right" }
      ]
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        { "type": "image_picker", "id": "desktop_image", "label": "Desktop Image" },
        { "type": "image_picker", "id": "mobile_image", "label": "Mobile Image" },
        { "type": "text", "id": "heading", "label": "Heading", "default": "Slide Heading" },
        { "type": "text", "id": "subheading", "label": "Subheading" },
        { "type": "image_picker", "id": "icon_1", "label": "Icon 1" },
        { "type": "text", "id": "label_1", "label": "Label 1" },
        { "type": "image_picker", "id": "icon_2", "label": "Icon 2" },
        { "type": "text", "id": "label_2", "label": "Label 2" },
        { "type": "image_picker", "id": "icon_3", "label": "Icon 3" },
        { "type": "text", "id": "label_3", "label": "Label 3" },
        { "type": "image_picker", "id": "icon_4", "label": "Icon 4" },
        { "type": "text", "id": "label_4", "label": "Label 4" },
        { "type": "text", "id": "button_label", "label": "Button Label", "default": "Learn More" },
        { "type": "url", "id": "button_link", "label": "Button Link" },
        { "type": "text", "id": "scroll_text", "label": "Scroll Down Text", "default": "Scroll Down" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Swiper Slider",
      "category": "Custom"
    }
  ]
}
{% endschema %}
