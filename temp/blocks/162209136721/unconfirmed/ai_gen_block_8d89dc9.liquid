{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .shop-the-look-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    max-width: 100%;
    margin: 0 auto;
  }

  .shop-the-look-container-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
  }

  .shop-the-look-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .shop-the-look-image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
  }

  .shop-the-look-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 4/3;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .shop-the-look-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
  }

  .shop-the-look-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    margin-bottom: 20px;
    text-align: {{ block.settings.text_alignment }};
    color: {{ block.settings.text_color }};
  }

  .shop-the-look-description-{{ ai_gen_id }} {
    margin-bottom: 20px;
    text-align: {{ block.settings.text_alignment }};
    color: {{ block.settings.text_color }};
  }

  .shop-the-look-hotspot-{{ ai_gen_id }} {
    position: absolute;
    transform: translate(-50%, -50%);
    z-index: 2;
  }

  .shop-the-look-hotspot-button-{{ ai_gen_id }} {
    width: {{ block.settings.hotspot_size }}px;
    height: {{ block.settings.hotspot_size }}px;
    border-radius: 50%;
    background-color: {{ block.settings.hotspot_color }};
    border: 2px solid {{ block.settings.hotspot_border_color }};
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    color: {{ block.settings.hotspot_text_color }};
    font-size: {{ block.settings.hotspot_size | divided_by: 2 }}px;
    font-weight: bold;
    transition: transform 0.3s ease;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
  }

  .shop-the-look-hotspot-button-{{ ai_gen_id }}:hover {
    transform: scale(1.1);
  }

  .shop-the-look-products-{{ ai_gen_id }} {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    margin-top: 30px;
  }

  .shop-the-look-product-{{ ai_gen_id }} {
    flex: 1 1 {{ block.settings.products_per_row | times: 100 | divided_by: 4 }}%;
    min-width: 150px;
    padding: 10px;
    border-radius: 8px;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .shop-the-look-product-{{ ai_gen_id }}:hover {
    transform: translateY(-5px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
  }

  .shop-the-look-product-image-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 1/1;
    object-fit: cover;
    border-radius: 8px;
    margin-bottom: 10px;
  }

  .shop-the-look-product-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 1/1;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
    border-radius: 8px;
    margin-bottom: 10px;
  }

  .shop-the-look-product-image-placeholder-{{ ai_gen_id }} svg {
    width: 50%;
    height: 50%;
  }

  .shop-the-look-product-title-{{ ai_gen_id }} {
    font-size: 14px;
    font-weight: 500;
    margin-bottom: 5px;
    color: {{ block.settings.text_color }};
  }

  .shop-the-look-product-price-{{ ai_gen_id }} {
    font-size: 14px;
    font-weight: 600;
    margin-bottom: 10px;
    color: {{ block.settings.text_color }};
  }

  .shop-the-look-product-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 8px 15px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: 4px;
    font-size: 12px;
    transition: background-color 0.3s ease;
  }

  .shop-the-look-product-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  .shop-the-look-mobile-select-{{ ai_gen_id }} {
    display: none;
    margin-top: 20px;
    width: 100%;
  }

  .shop-the-look-mobile-dropdown-{{ ai_gen_id }} {
    width: 100%;
    padding: 10px;
    border: 1px solid #ddd;
    border-radius: 4px;
    background-color: #fff;
    font-size: 14px;
  }

  @media screen and (max-width: 749px) {
    .shop-the-look-product-{{ ai_gen_id }} {
      flex: 1 1 {{ block.settings.products_per_row_mobile | times: 100 | divided_by: 2 }}%;
    }

    .shop-the-look-hotspot-button-{{ ai_gen_id }} {
      width: {{ block.settings.hotspot_size | times: 0.8 }}px;
      height: {{ block.settings.hotspot_size | times: 0.8 }}px;
      font-size: {{ block.settings.hotspot_size | times: 0.8 | divided_by: 2 }}px;
    }

    .shop-the-look-mobile-select-{{ ai_gen_id }} {
      display: block;
    }

    .shop-the-look-hotspot-{{ ai_gen_id }} {
      display: none;
    }
  }
{% endstyle %}

<shop-the-look-{{ ai_gen_id }} class="shop-the-look-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="shop-the-look-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="shop-the-look-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    {% if block.settings.description != blank %}
      <div class="shop-the-look-description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
    {% endif %}

    <div class="shop-the-look-image-wrapper-{{ ai_gen_id }}">
      {% if block.settings.image %}
        <img 
          src="{{ block.settings.image | image_url: width: 2000 }}" 
          alt="{{ block.settings.image.alt | escape }}" 
          class="shop-the-look-image-{{ ai_gen_id }}" 
          loading="lazy"
          width="{{ block.settings.image.width }}"
          height="{{ block.settings.image.height }}"
        >
      {% else %}
        <div class="shop-the-look-image-placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
        </div>
      {% endif %}

      {% for i in (1..5) %}
        {% liquid
          assign product_key = 'product_' | append: i
          assign x_key = 'product_' | append: i | append: '_x'
          assign y_key = 'product_' | append: i | append: '_y'
          
          assign product = block.settings[product_key]
          assign x_position = block.settings[x_key]
          assign y_position = block.settings[y_key]
        %}

        {% if product != blank %}
          <div 
            class="shop-the-look-hotspot-{{ ai_gen_id }} shop-the-look-hotspot-{{ ai_gen_id }}-{{ i }}" 
            style="top: {{ y_position }}%; left: {{ x_position }}%;"
            data-product-index="{{ i }}"
          >
            <button 
              class="shop-the-look-hotspot-button-{{ ai_gen_id }}" 
              aria-label="View product {{ i }}: {{ product.title }}"
              data-product-index="{{ i }}"
            >
              {{ i }}
            </button>
          </div>
        {% endif %}
      {% endfor %}
    </div>

    <div class="shop-the-look-mobile-select-{{ ai_gen_id }}">
      <select class="shop-the-look-mobile-dropdown-{{ ai_gen_id }}" aria-label="Select a product">
        <option value="">{{ block.settings.dropdown_placeholder }}</option>
        {% for i in (1..5) %}
          {% liquid
            assign product_key = 'product_' | append: i
            assign product = block.settings[product_key]
          %}
          
          {% if product != blank %}
            <option value="{{ i }}">{{ i }}. {{ product.title }}</option>
          {% endif %}
        {% endfor %}
      </select>
    </div>

    <div class="shop-the-look-products-{{ ai_gen_id }}">
      {% for i in (1..5) %}
        {% liquid
          assign product_key = 'product_' | append: i
          assign product = block.settings[product_key]
        %}
        
        {% if product != blank %}
          <div class="shop-the-look-product-{{ ai_gen_id }} shop-the-look-product-{{ ai_gen_id }}-{{ i }}" data-product-index="{{ i }}">
            {% if product.featured_image %}
              <img 
                src="{{ product.featured_image | image_url: width: 300 }}" 
                alt="{{ product.featured_image.alt | escape }}" 
                class="shop-the-look-product-image-{{ ai_gen_id }}" 
                loading="lazy"
                width="300"
                height="300"
              >
            {% else %}
              <div class="shop-the-look-product-image-placeholder-{{ ai_gen_id }}">
                {{ 'product-apparel-1' | placeholder_svg_tag }}
              </div>
            {% endif %}
            
            <h3 class="shop-the-look-product-title-{{ ai_gen_id }}">{{ product.title }}</h3>
            <div class="shop-the-look-product-price-{{ ai_gen_id }}">{{ product.price | money }}</div>
            <a href="{{ product.url }}" class="shop-the-look-product-button-{{ ai_gen_id }}">{{ block.settings.button_label }}</a>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</shop-the-look-{{ ai_gen_id }}>

<script>
  (function() {
    class ShopTheLook extends HTMLElement {
      constructor() {
        super();
        this.hotspots = this.querySelectorAll('.shop-the-look-hotspot-{{ ai_gen_id }}');
        this.products = this.querySelectorAll('.shop-the-look-product-{{ ai_gen_id }}');
        this.mobileDropdown = this.querySelector('.shop-the-look-mobile-dropdown-{{ ai_gen_id }}');
      }

      connectedCallback() {
        this.initializeHotspots();
        this.initializeMobileDropdown();
        this.highlightFirstProduct();
      }

      initializeHotspots() {
        this.hotspots.forEach(hotspot => {
          const button = hotspot.querySelector('.shop-the-look-hotspot-button-{{ ai_gen_id }}');
          const productIndex = hotspot.dataset.productIndex;
          
          button.addEventListener('click', () => {
            this.highlightProduct(productIndex);
            this.scrollToProduct(productIndex);
          });
        });
      }

      initializeMobileDropdown() {
        if (this.mobileDropdown) {
          this.mobileDropdown.addEventListener('change', (event) => {
            const productIndex = event.target.value;
            if (productIndex) {
              this.highlightProduct(productIndex);
              this.scrollToProduct(productIndex);
            }
          });
        }
      }

      highlightFirstProduct() {
        if (this.products.length > 0) {
          const firstProductIndex = this.products[0].dataset.productIndex;
          this.highlightProduct(firstProductIndex);
        }
      }

      highlightProduct(index) {
        // Remove highlight from all products
        this.products.forEach(product => {
          product.style.backgroundColor = '';
        });
        
        // Highlight selected product
        const selectedProduct = this.querySelector(`.shop-the-look-product-{{ ai_gen_id }}-${index}`);
        if (selectedProduct) {
          selectedProduct.style.backgroundColor = 'rgba(0, 0, 0, 0.05)';
        }
        
        // Update mobile dropdown
        if (this.mobileDropdown) {
          this.mobileDropdown.value = index;
        }
      }

      scrollToProduct(index) {
        const selectedProduct = this.querySelector(`.shop-the-look-product-{{ ai_gen_id }}-${index}`);
        if (selectedProduct) {
          const isMobile = window.innerWidth <= 749;
          
          if (isMobile) {
            selectedProduct.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
          }
        }
      }
    }

    customElements.define('shop-the-look-{{ ai_gen_id }}', ShopTheLook);
  })();
</script>

