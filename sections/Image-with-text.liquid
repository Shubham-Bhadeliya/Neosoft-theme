{% schema %}
{
  "name": "Image-with-text",
  "settings": [
    {
      "type": "image_picker",
      "id": "section_image",
      "label": "Main Image"
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Image Position (Desktop)",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "right", "label": "Right" }
      ],
      "default": "left"
    },
    {
      "type": "image_picker",
      "id": "icon_image",
      "label": "Small Icon (beside heading)"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Giving back to the community"
    },
    {
      "type": "textarea",
      "id": "paragraph",
      "label": "Paragraph Text",
      "default": "At Zingavita, we are dedicated to advancing quality education and healthcare..."
    },
    {
      "type": "textarea",
      "id": "highlight_text",
      "label": "Highlighted Text",
      "default": "As part of our commitment, Zingavita pledges 1% of its revenue to support..."
    }
  ],
  "presets": [
    {
      "name": "Image-with-text",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}

<style>
.giving-back-section {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;
  background-color: #f4f6f5;
  padding: 40px 20px;
  gap: 20px;
}

.giving-back-section.reverse {
  flex-direction: row-reverse;
}

.giving-back-image,
.giving-back-content {
  flex: 1 1 50%;
  max-width: 50%;
  padding: 20px;
}

.giving-back-image img {
  width: 100%;
  height: auto;
  border-radius: 8px;
}

.giving-back-heading {
  display: flex;
  align-items: center;
  gap: 15px;
  margin-bottom: 15px;
}

.giving-back-heading img {
  width: 32px;
  height: 32px;
  object-fit: contain;
}

.giving-back-heading h2 {
  font-size: 28px;
  font-weight: 700;
  color: #222;
  margin: 0;
}

.giving-back-content p {
  font-size: 16px;
  color: #333;
  line-height: 1.6;
  margin-bottom: 15px;
}

.giving-back-content .highlight {
  font-weight: 600;
  color: #000;
}

/* Mobile Styles */
@media (max-width: 768px) {
  .giving-back-section,
  .giving-back-section.reverse {
    flex-direction: column;
  }

  .giving-back-image,
  .giving-back-content {
    max-width: 100%;
    padding: 10px;
  }

  .giving-back-heading {
    flex-direction: row;
    justify-content: flex-start;
  }

  .giving-back-heading img {
    width: 28px;
    height: 28px;
  }

  .giving-back-heading h2 {
    font-size: 22px;
  }

  .giving-back-content p {
    font-size: 15px;
  }
}
</style>

<div class="giving-back-section {% if section.settings.image_position == 'right' %}reverse{% endif %}">
  <div class="giving-back-image">
    {% if section.settings.section_image != blank %}
      <img src="{{ section.settings.section_image | image_url: width: 800 }}" alt="Main Section Image">
    {% endif %}
  </div>

  <div class="giving-back-content">
    <div class="giving-back-heading">
      {% if section.settings.icon_image != blank %}
        <img src="{{ section.settings.icon_image | image_url: width: 64 }}" alt="Icon">
      {% endif %}
      <h2>{{ section.settings.heading }}</h2>
    </div>

    <p>{{ section.settings.paragraph }}</p>
    <p class="highlight">{{ section.settings.highlight_text }}</p>
  </div>
</div>
