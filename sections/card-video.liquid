    }
  ],
  "blocks": [
    {
      "type": "product_card",
      "name": "Product Video Card",
      "settings": [
        {
          "type": "video",
          "id": "video_file",
          "label": "Video File"
        },
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        },
        {
          "type": "image_picker",
          "id": "thumbnail",
          "label": "Poster Image (shown before play and after end)"
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "card-video",
      "category": "Custom"
    }
  ]
}
{% endschema %}
