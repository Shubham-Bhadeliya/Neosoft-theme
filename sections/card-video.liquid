<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css" />
<script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>

<section class="health-cart-section">
  <div class="page-width">
    {% if section.settings.heading != blank %}
      <h2 class="heading">{{ section.settings.heading }}</h2>
    {% endif %}
    {% if section.settings.subheading != blank %}
      <p class="subheading">{{ section.settings.subheading }}</p>
    {% endif %}

    <div class="swiper health-cart-swiper">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          {% assign product = block.settings.product %}
          <div class="swiper-slide video-card">
            <div class="video-thumbnail" data-video-wrapper>
              {% if block.settings.thumbnail != blank %}
                <div class="poster-thumb" style="background-image: url({{ block.settings.thumbnail | image_url: width: 600 }});" data-poster></div>
              {% endif %}
              {% if block.settings.video_file != blank %}
                <video loop muted playsinline class="video-in-card" preload="metadata">
                  {% for source in block.settings.video_file.sources %}
                    {% if source.format == 'mp4' %}
                      <source src="{{ source.url }}" type="video/mp4">
                    {% endif %}
                  {% endfor %}
                </video>
                <div class="play-overlay" data-play-button>▶</div>
              {% endif %}
            </div>

            {% if product != blank %}
              <div class="product-info">
                <img src="{{ product.featured_image | image_url }}" alt="{{ product.title }}" class="product-thumbnail" />
                <p class="product-name">{{ product.title }}</p>
                <p class="product-price">
                  ₹ {{ product.price | money_without_trailing_zeros }}
                  {% if product.compare_at_price > product.price %}
                    <span class="original-price">₹ {{ product.compare_at_price | money_without_trailing_zeros }}</span>
                  {% endif %}
                </p>
              </div>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>

<style>
.health-cart-section {
  text-align: center;
  background: #f8f7f4;
}
.health-cart-section .heading {
  font-size: 40px;
  font-weight: 700;
  color: #1c1c1c;
  text-align: left;
  margin-bottom: 0;
  margin-top: 0;
}
.health-cart-section .subheading {
  font-size: 16px;
  color: #666;
  text-align: left;
  width: 500px;
  margin-top:13px;
  margin-bottom:39px;
}
.health-cart-swiper {
  overflow: hidden;
  padding-bottom: 20px;
}
.video-card {
  background: #f8f7f4;
  border-radius: 16px;
  overflow: hidden;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
  width: 250px;
  flex-shrink: 0;
}
.video-thumbnail {
  position: relative;
  width: 100%;
  height: 350px;
  border-radius: 16px 16px 0 0;
  overflow: hidden;
}
.video-in-card {
  width: 100%;
  height: 100%;
  object-fit: cover;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}
.poster-thumb {
  position: absolute;
  width: 100%;
  height: 100%;
  background-size: cover;
  background-position: center;
  z-index: 2;
  opacity: 1;
  transition: opacity 0.4s ease;
  pointer-events: none;
}
.play-overlay {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 13px;
  color: #fff;
  background: rgba(0, 0, 0, 0.45);
  padding: 8px 14px;
  border-radius: 50%;
  cursor: pointer;
  z-index: 3;
}
.product-info {
  padding: 3px 9px 1px;
  text-align: left;
}
.product-thumbnail {
  width: 42px;
  height: 42px;
  object-fit: contain;
  margin-bottom: 10px;
  border-radius: 6px;
}
.product-name {
  font-weight: 600;
  font-size: 20px;
  margin: -12px 0;
  color: #1c1c1c;
}
.product-price {
  font-size: 14px;
  color: #000;
}
.original-price {
  text-decoration: line-through;
  color: #999;
  font-size: 13px;
  margin-left: 6px;
}
